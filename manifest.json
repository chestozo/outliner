{
    "manifest_version": 2,

    "name": "Outliner",
    "version": "0.1",
    "description": "Outline elements on the page",

    "background": {
        "scripts": [
            "bg.js"
        ]
    },

    "browser_action": {},

    "permissions": [
        "*://*/*",
        "tabs",
        "contextMenus"
    ],

    "commands": {
        "toggle-elements-outline-once": {
            "suggested_key": {
                "default": "Ctrl+Shift+O",
                "mac": "Command+Shift+O"
            },
            "description": "Toggle elements outline (turn elements outline on and off)"
        },
        "toggle-elements-outline": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Permanent elements outline (permanent outline so you can see what elements are replaced when interacting with the webpage)"
        }
    }
}
